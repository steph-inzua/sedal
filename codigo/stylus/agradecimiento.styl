@require "base/utiles"
@require "nib"
@require "animations"

#interior
	min-height 698px
	height 100vh
	display flex
	justify-content center
	align-items center
	+hasta( escritorio)
		min-height 650px
		
	.slider-txt
		width 920px
		background rgba(0,0,0,.5)
		border 2px solid #636266
		padding 50px 32px
		border-radius 10px
		box-sizing border-box
		text-align center
		+hasta( escritorio )
			box-sizing border-box
			padding 25px 10px
			display inherit
			width 95%
			margin 0 auto
			

	.title1
		margin-top 0
		margin-bottom 0
	.head-tit
		background url('../img/line-title-rosa.png') center top repeat-x
		text-align center
		padding-top 63px
		font-size (42.66 / 16)rem
		margin-bottom 5px
		+hasta( escritorio )
			background url('../img/line-title-resp.png') center top repeat-x
	.title4
		font-size (35.96  / 16)rem
		color rosa
		text-transform uppercase
		text-align center
		margin-bottom 5px
	.title5
		font-size (20.96  / 16)rem
		color blanco
		text-align center
		margin-bottom 5px
			
			
	.boton
		margin-top 30px
		background url('../img/line-title-rosa.png') center center repeat-x
		+hasta( escritorio)
			text-align center
			margin-bottom -60px
			background url('../img/line-title-resp.png') center top repeat-x
			padding-top 50px
			
	